<% if obj.errors.any? %>
  <div class='well'>
    <div class='alert alert-error'>
      <h4>There were some errors:</h4>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div> <!-- end error div -->
  </div>   <!-- end row div	 -->
<% end %>
